# Supabase Configuration
VITE_SUPABASE_PROJECT_ID=your_project_id
VITE_SUPABASE_ANON_KEY=your_anon_key
VITE_SUPABASE_URL=https://your_project_id.supabase.co

# Authentication
VITE_AUTH_REDIRECT_URL=http://localhost:5173
VITE_AUTH_SITE_URL=http://localhost:5173

# Application Configuration
VITE_APP_NAME="Spark Bloom Flow"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_URL=http://localhost:5173

# Features Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_MOBILE_OPTIMIZATIONS=true

# External Services
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id
VITE_SLACK_CLIENT_ID=your_slack_client_id

# Error Tracking & Monitoring
VITE_SENTRY_DSN=your_sentry_dsn
VITE_POSTHOG_KEY=your_posthog_key
VITE_HOTJAR_ID=your_hotjar_id

# Performance Monitoring
VITE_WEB_VITALS_ENDPOINT=your_web_vitals_endpoint
VITE_PERFORMANCE_API_KEY=your_performance_api_key

# Quality Gates & 5S
QUALITY_WEBHOOK_URL=your_quality_webhook_url
SLACK_QUALITY_CHANNEL=#quality-alerts
GITHUB_TOKEN=your_github_token

# Email & Notifications
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Storage & CDN
VITE_CDN_URL=your_cdn_url
VITE_STORAGE_BUCKET=your_storage_bucket

# Security
VITE_CSP_NONCE=generated_nonce
VITE_ENCRYPTION_KEY=your_encryption_key

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_SHOW_PERFORMANCE_MONITOR=true