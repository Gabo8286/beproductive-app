echo "🚀 Running pre-push checks..."

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'

FAILED=0

echo -e "${BLUE}Running comprehensive test suite...${NC}"
if ! npm run test:run; then
    echo -e "${RED}❌ Test suite failed${NC}"
    FAILED=1
else
    echo -e "${GREEN}✅ Test suite passed${NC}"
fi

echo -e "${BLUE}Running production build...${NC}"
if ! npm run build; then
    echo -e "${RED}❌ Production build failed${NC}"
    FAILED=1
else
    echo -e "${GREEN}✅ Production build successful${NC}"
fi

echo -e "${BLUE}Running cross-platform validation...${NC}"
if [ -f "../shared/scripts/validate-consistency.sh" ]; then
    ../shared/scripts/validate-consistency.sh
fi

if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}🎉 Ready to push!${NC}"
    exit 0
else
    echo -e "${RED}💥 Pre-push checks failed!${NC}"
    echo -e "${RED}Push blocked${NC}"
    exit 1
fi
