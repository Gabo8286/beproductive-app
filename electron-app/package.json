{
  "name": "beproductive-coding-framework",
  "version": "1.0.0",
  "description": "BeProductive Coding Framework - Your Personal AI-Powered Development Environment",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "electron-builder --publish=never",
    "electron:pack": "electron-builder --dir",
    "preload:build": "esbuild electron/preload.js --bundle --platform=node --outfile=dist-electron/preload.js",
    "clean": "rm -rf dist dist-electron"
  },
  "build": {
    "appId": "com.beproductive.codingframework",
    "productName": "BeProductive Coding Framework",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ]
    },
    "dmg": {
      "title": "BeProductive Coding Framework"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.1.8",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "react-split-pane": "^0.1.92",
    "react-tabs": "^6.1.0",
    "simple-git": "^3.28.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.20.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "wait-on": "^7.2.0"
  }
}
